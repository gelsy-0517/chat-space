.side-bar
  .side-bar__LeftHeader 
    .side-bar__LeftHeader__list 
      %h3.side-bar__LeftHeader__list__userName
        = current_user.name
      %ul.side-bar__LeftHeader__list__iconlist
        %li.side-bar__LeftHeader__list__iconlist__btn
          = link_to "/groups/new", class: "side-bar__LeftHeader__list__iconlist__btn--edit" do
            = icon('far', 'edit', class: "side-bar__LeftHeader__list__iconlist__btn--icon")
        %li.side-bar__LeftHeader__list_iconlist__btn
          = link_to edit_user_path(current_user), class: "side-bar__LeftHeader__list_iconlist__btn--cog" do
            = icon('fas', 'cog', class: "side-bar__LeftHeader__list__iconlist__btn--icon")
  .side-bar__GroupList 
    - current_user.groups.each do |group|
      .side-bar__GroupList__Group
        = link_to '#' do
          .side-bar__GroupList__Group__name 
            = group.name
          .side-bar__GroupList__Group__message 
            メッセージはまだありません